# ============================================
# UNIVERSITY SCHEDULE SYSTEM - Environment Variables
# ============================================
# Скопируйте этот файл в .env и заполните значения
# cp env.template .env

# ============ GIGACHAT API (ОБЯЗАТЕЛЬНО!) ============
# Получите credentials на: https://developers.sber.ru/studio/workspaces
GIGACHAT_CLIENT_ID=
GIGACHAT_CLIENT_SECRET=
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# ============ DATABASE ============
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=university_db
DB_HOST=postgres
DB_PORT=5432

# ============ REDIS ============
REDIS_PASSWORD=
REDIS_HOST=redis
REDIS_PORT=6379

# ============ RABBITMQ ============
RABBITMQ_USER=
RABBITMQ_PASSWORD=
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# ============ JWT (ВАЖНО: Измените в production!) ============
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ============ SERVICES ============
# Настройки логирования
LOG_LEVEL=INFO
ENVIRONMENT=production

# Настройки агента
MAX_ITERATIONS=100
BCRYPT_ROUNDS=12

# ============ PORTS ============
# Gateway
GATEWAY_PORT=8000

# Microservices
MS_AUTH_PORT=50052
MS_AUDIT_PORT=50051
MS_AGENT_PORT=50053
MS_SCHEDULE_PORT=50055

# Infrastructure
POSTGRES_PORT=5432
REDIS_PORT=6379
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ============ SECURITY SETTINGS ============
# Максимальное количество неудачных попыток входа
MAX_LOGIN_ATTEMPTS=5
# Длительность блокировки аккаунта (минуты)
LOCKOUT_DURATION_MINUTES=30

# ============ CORS ============
CORS_ORIGINS=*

# ============ NOTES ============
# 1. GigaChat credentials - ОБЯЗАТЕЛЬНО заполнить!
# 2. JWT_SECRET_KEY - ОБЯЗАТЕЛЬНО изменить в production!
# 3. Все пароли - ОБЯЗАТЕЛЬНО изменить в production!
# 4. В development можно оставить значения по умолчанию

# ============ BOT (Telegram/MAX) ============
BOT_TOKEN=
BOT_USERNAME=

# API URL (для production используйте https://max.isayalot.ru)
VITE_API_URL=https://max.isayalot.ru

