# ============================================
# MS-AGENT - Environment Variables Template
# ============================================
# Микросервис LLM-агента для генерации расписания

# ============ DATABASE ============
DB_HOST=localhost
DB_PORT=5432
DB_NAME=university_db
DB_USER=university_user
DB_PASSWORD=university_pass_secure_2024
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============ REDIS ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_secure_2024
CACHE_ENABLED=true
CACHE_TTL=3600

# ============ GIGACHAT API (ОБЯЗАТЕЛЬНО!) ============
# Получите credentials на: https://developers.sber.ru/studio/workspaces
# 1. Зарегистрируйтесь
# 2. Создайте проект
# 3. Получите Client ID и Client Secret
GIGACHAT_CLIENT_ID=your_client_id_here
GIGACHAT_CLIENT_SECRET=your_client_secret_here
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_MODEL=GigaChat
GIGACHAT_TEMPERATURE=0.7
GIGACHAT_MAX_TOKENS=2000

# ============ RPC CLIENTS ============
MS_AUDIT_HOST=localhost
MS_AUDIT_PORT=50051

# ============ gRPC ============
GRPC_PORT=50053
GRPC_MAX_WORKERS=10

# ============ AGENT SETTINGS ============
MAX_ITERATIONS=100
STAGE1_MAX_ITERATIONS=80
STAGE2_MAX_ITERATIONS=50
EARLY_STOPPING_PATIENCE=15
MIN_IMPROVEMENT_THRESHOLD=0.01

# ============ LOGGING ============
LOG_LEVEL=INFO

# ============ SERVICE INFO ============
ENVIRONMENT=production
SERVICE_VERSION=1.0.0

# ============ OPTIONAL ============
SKIP_MIGRATIONS=false

# ============ NOTES ============
# GigaChat API:
# - GIGACHAT_MODEL: GigaChat, GigaChat-Plus, GigaChat-Pro
# - GIGACHAT_TEMPERATURE: 0.0-2.0 (выше = более креативно)
# - MAX_ITERATIONS: Рекомендуется 50-200 для хороших результатов
# - EARLY_STOPPING_PATIENCE: Остановка если нет улучшений за N итераций

